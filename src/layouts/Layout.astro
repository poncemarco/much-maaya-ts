<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
		color-scheme: dark light;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

<script>
	document.addEventListener('astro:page-load', () => {
		//variables
		let theme : string | void;

		//components
		const themeToggle = document.querySelector("#theme-toggle") as HTMLButtonElement;
		const tooltip = document.querySelector("#tooltip-light") as HTMLElement;

		// functions 
		function getCurrenTheme() {
			let currentTheme = localStorage.getItem("theme") || "light";
			if (currentTheme === "dark") {
				document.documentElement.classList.add("dark");
			}
			return currentTheme;
		}

		function changeTheme() {
			if (theme === "light") {
				document.documentElement.classList.add("dark");
				theme = "dark";
			} else {
				document.documentElement.classList.remove("dark");
				theme = "light";
			}
			themeToggle.innerHTML = theme === "light" ? "ðŸŒ™" : "â˜€ï¸";
			tooltip.innerHTML = theme === "light" ? "Cambia  a modo nocturnoðŸŒ™" : "Cambia  a modo dÃ­a â˜€ï¸";
			window.localStorage.setItem("theme", theme);
		} 

		// set initial theme
		theme = getCurrenTheme();
		themeToggle.innerHTML = theme === "light" ? "ðŸŒ™" : "ðŸŒž";
		tooltip.innerHTML = theme === "light" ? "Cambia  a modo nocturno ðŸŒ™" : "Cambia  a modo dÃ­a ðŸŒž";

		


		//listeners 
		themeToggle.addEventListener("click", changeTheme);
		themeToggle.addEventListener("mouseover", () => {
			tooltip.classList.add("opacity-100");
			tooltip.classList.remove("opacity-0");
		});
		themeToggle.addEventListener("mouseout", () => {
			tooltip.classList.remove("opacity-100");
			tooltip.classList.add("opacity-0");
		});


		const topMenu = document.querySelector("#topMenu") as HTMLElement;
		const mobileMenu = document.querySelector("#mobileMenu") as HTMLElement;

		function selectNavBar() {
			if (window.innerWidth < 768) {
				topMenu.style.display = "none";
				mobileMenu.style.display = "block";
			} else {
				topMenu.style.display = "block";
				mobileMenu.style.display = "none";
			}
		}

		selectNavBar();

		window.addEventListener("resize", () => {
			selectNavBar();
		});
		

	});

	

	
</script>